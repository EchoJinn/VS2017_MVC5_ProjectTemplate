@model CenGts.Web.Controllers.RegisterBindingModel
@using System.Web.Optimization
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.empty.cshtml";
}

<style type="text/css">
    .skin-blue {
        background-color: #061E3E;
    }

        .skin-blue .wrapper {
            background-color: #061E3E;
        }

    .validation-summary-errors {
        color: red;
    }
</style>
@using (Html.BeginForm("RegisterUser", "Account", FormMethod.Post, new { @class = "panel-success" }))
{
@Html.AntiForgeryToken()
@Html.HiddenFor(model => model.CustomerId)
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>WMS Lite| Log in</title>
        <!-- Tell the browser to be responsive to screen width -->
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
        <!-- Bootstrap 3.3.7 -->
        <link rel="stylesheet" href="../../Content/css/bootstrap.min.css">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="../../Content/css/font-awesome.min.css">
        <!-- Ionicons -->
        <link rel="stylesheet" href="../../Content/css/ionicons.min.css">
        <!-- Theme style -->
        <link rel="stylesheet" href="../../Content/css/AdminLTE.min.css">
        <!-- iCheck -->
        <link rel="stylesheet" href="../../Content/css/icheck/blue.css">

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
        <!-- Google Font -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    </head>
    <body class="hold-transition login-page">
        <div class="login-box">
            <div class="login-logo">
                <img src="~/Content/img/WMSLogo.png">
            </div>
            <!-- /.login-logo -->
            <div class="login-box-body">
                <p class="login-box-msg">Registration</p>

                <form >
                    <div class="form-group">
                        <div class="form-group col-md-12">
                            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-4" })
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group col-md-12">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-4" })
                            @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div> 
                    <div class="row">
                        @Html.ValidationSummary(true)

                        <!-- /.col -->
                        <div class="col-xs-6">
                            <a href="@Url.Action("Login","Account")"><input type="button" class="btn btn-primary btn-block btn-flat" value="Back to login" /></a>
                        </div>
                        <div class="col-xs-6">
                            <button type="submit" class="btn btn-primary btn-block btn-flat">Register</button>
                        </div>


                        <!-- /.col -->
                    </div>
                </form>
            </div>
        </div>
        <!-- /.login-box -->
        <!-- jQuery 3 -->
        <script src="../../Content/js/plugins/jquery/jquery-3.3.1.min.js"></script>
        <!-- Bootstrap 3.3.7 -->
        <script src="../../Content/js/plugins/bootstrap/bootstrap.min.js"></script>
        <!-- iCheck -->
        <script src="../../Content/js/plugins/icheck/icheck.min.js"></script>
    </body>
</html>

<script src="~/Content/SweetAlert/sweetalert.min.js"></script>
<script type="text/javascript">

            var msg = "@TempData["LoginMessage"]";
            if (msg != "")
            {
                swal(/*"Error!",*/ "@TempData["LoginMessage"]".toString(), "error");
                '@TempData.Remove("LoginMessage")';
            }

</script>
}