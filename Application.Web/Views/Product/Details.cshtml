@model CenGts.Web.Models.ViewModels.ProductViewModel
@{
    ViewBag.Title = "Product Details";
}
<div class="box-body">
    <div class="form-horizontal">
        <div class="col-md-12">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ProductCode)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ProductCode)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.IsActive)
                </dt>
                <dd>
                    @{
                        var isActive = Model.IsActive ? "Yes" : "No";
                    }
                    @isActive
                </dd>
            </dl>
        </div>
    </div>
</div>
@if (Model.IsActive)
{
    <div class="box-footer">
        @*<button type="button" class="btn btn-primary pull-right" data-id="@Model.Id">Edit</button>*@
        <button type="button" class="btn btn-primary pull-right crud" data-id="@Model.Id" data-request-url="@Url.Action("Edit")">Edit</button>
    </div>
}


<script type="text/javascript">

    $(".crud").click(function () {

        var btnClick = $(this);
        var url = btnClick.data('request-url') + '?id=' + btnClick.data('id');
        AjaxCrudCall(url, "GET");

    });

    $('.modal-title').html("<b>Details</b>");
</script>
