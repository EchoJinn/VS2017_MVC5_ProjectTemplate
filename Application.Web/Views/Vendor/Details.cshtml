@model Application.Web.Models.ViewModels.VendorViewModel

@{
    ViewBag.Title = "Vendor Details";
}

<div class="box-body">
    <div class="form-horizontal">
        <div class="col-md-12">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.VendorCode)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.VendorCode)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.VendorName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.VendorName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ContactPerson)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ContactPerson)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Telephone)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Telephone)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.MobileNo)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.MobileNo)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.EmailAddress)
                </dt>
                <dd>
                    @Html.DisplayTextFor(model => model.EmailAddress)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Website)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Website)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Address1)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Address1)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Address2)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Address2)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.IsActive)
                </dt>
                <dd>
                    @{
                        var isActive = Model.IsActive ? "Yes" : "No";
                    }
                    @isActive
                </dd>
            </dl>
        </div>
    </div>
</div>
@if (Model.IsActive)
{
    <div class="box-footer">
        <button type="button" class="btn btn-primary pull-right crud" data-id="@Model.Id" data-request-url="@Url.Action("Edit")">Edit</button>
    </div>

}


<script type="text/javascript">

    $(".crud").click(function () {

        debugger;
        var btnClick = $(this);
        var url = btnClick.data('request-url') + '?id=' + btnClick.data('id');
        AjaxCrudCall(url, "GET");
    });

    $('.modal-title').html("<b>Details</b>");

</script>
