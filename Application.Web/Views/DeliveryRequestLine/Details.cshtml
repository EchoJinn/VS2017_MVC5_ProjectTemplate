@model CenGts.Web.Models.ViewModels.DeliveryRequestLineViewModel

@{
    ViewBag.Title = "Delivery Request Line Details";
}

<div class="box-body">
    <div class="form-horizontal">
        <div class="col-md-12">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.ProductDescription)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ProductDescription)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.PickType)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PickType)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Quantity)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Quantity)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.SpecialInstructions)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SpecialInstructions)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Memo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Memo)
                </dd>
            </dl>
        </div>
    </div>
</div>
@if (Model.IsActive)
{
    <div class="box-footer">
        <button type="button" class="btn btn-primary pull-right crud" data-id="@Model.Id" data-request-url="@Url.Action("Edit")">Edit</button>
    </div>
}

<script type="text/javascript">

    $(".crud").click(function () {

        debugger;
        var btnClick = $(this);
        var url = btnClick.data('request-url') + '?id=' + btnClick.data('id');
        AjaxCrudCall(url, "GET");
    });

    $('.modal-title').html("<b>Details</b>");

</script>
